#!/usr/bin/expect
set _ssh [lindex $argv 0]
set passwd  [lindex $argv 1]
set timeout 30

eval spawn $_ssh

if {$passwd != ""} {
    expect {
        "yes/no" { 
            send "yes\r"
        }
        "password:" { 
            send "$passwd\r" 
        }
    }
}

if {$argc > 2} {
    set passwd2  [lindex $argv 2]
    send "$passwd2 \r"
    expect {
        "*$*" {
            send "su \r"
            expect {
                "*ï¼š" {
                    send "$passwd2\r"
                }
            }
        }
    }
}

interact
